class Solution:
    def reverse(self, x: int) -> int:
        a=str(x)[::-1] #設一個變數a，用str把x轉成字串，再用[::-1]把字串反轉
        if x<-0: 
            a=a.strip("-") #再用strip把字串中最後的"-"給去除
            if int(a)>2**31-1: #限定[-2**31,2**31]
                return  0
            else:
                return -int(a) #最後要把"-"加回來           
        else:
            if int(a)>2**31-1:
                return 0
            else:
                return int(a)
